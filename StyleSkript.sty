% Satz
\newcounter{satz}[section] \setcounter{satz}{0}
\newcommand{\satztitel}{\arabic{section}.\arabic{satz}}
\newenvironment{satz}[1][]{%
	\refstepcounter{satz}%
	\ifstrempty{#1}%
	{\mdfsetup{%
			frametitle={%
				\tikz[baseline=(current bounding box.east),outer sep=0pt]
				\node[anchor=east,rectangle,fill=orange!75]
				{\strut Satz~\satztitel};}}
	}%
	{\mdfsetup{%
			frametitle={%
				\tikz[baseline=(current bounding box.east),outer sep=0pt]
				\node[anchor=east,rectangle,fill=orange!75]
				{\strut Satz~\satztitel:~#1};}}%
	}%
	\mdfsetup{innertopmargin=-3pt,linecolor=orange!75,%
		linewidth=2pt,topline=true,backgroundcolor=none,
		frametitleaboveskip=\dimexpr-\ht\strutbox\relax
	}
	\noindent
	\begin{minipage}{\linewidth}
	\begin{mdframed}[]\relax
		%		\label{#2}
	}{
		\end{mdframed}
		\end{minipage}\par
		\vspace{1ex}
}
